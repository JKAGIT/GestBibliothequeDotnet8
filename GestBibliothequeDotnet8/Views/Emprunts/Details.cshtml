
@model Emprunts

<h2>Détails de l'emprunt</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Informations de l'emprunt</h5>
        <ul class="list-group">
            <li class="list-group-item">
                <strong>Nom & prénoms:</strong> @Model.Usager.Nom @Model.Usager.Prenoms
            </li>
            <li class="list-group-item">
                <strong>Livre:</strong> @Model.Livre.Titre
            </li>
            <li class="list-group-item">
                <strong>Date:</strong> @Model.DateDebut
            </li>
            <li class="list-group-item">
                <strong>Date retour prévue:</strong> @Model.DateRetourPrevue
            </li>
        </ul>

        <div class="mt-3">
            <a href="@Url.Action("Index", "Emprunts")" class="btn btn-secondary">Retour à la liste</a>
            <a href="@Url.Action("Modifier", "Emprunts", new { id = Model.ID })" class="btn btn-primary">Modifier</a>
        </div>
    </div>
</div>