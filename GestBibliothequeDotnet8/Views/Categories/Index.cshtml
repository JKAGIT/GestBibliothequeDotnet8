@using GestBibliothequeDotnet8.Utilitaires

 @model PaginatedResult<Categories>

<h2>Liste des catégories</h2>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Libelle</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Data)
        {
            <tr>
                <td>@category.Code</td>
                <td>@category.Libelle</td>
                <td>
                    <a href="@Url.Action("Modifier", "Categories", new { id = category.ID })">Modifier</a> |
                    <a href="@Url.Action("Supprimer", "Categories", new { id = category.ID })">Supprimer</a> |
                    <a href="@Url.Action("Details", "Categories", new { id = category.ID })">Détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    Page @Model.PageNumber sur @Model.TotalPages
    @if (Model.PageNumber > 1)
    {
        <a href="@Url.Action("Index", new { pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize })" class="btn btn-secondary">@Html.Raw("&lt;&lt;")</a>
    }

    @if (Model.PageNumber < Model.TotalPages)
    {
        <a href="@Url.Action("Index", new { pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize })" class="btn btn-secondary">@Html.Raw("&gt;&gt;")</a>
    }
</div>

<a asp-action="Ajouter" class="btn btn-primary">Ajouter une Catégorie</a>
