
@model Categories

<div class="container mt-4">
    <h2>Détails de la catégorie</h2>

    <div class="mb-3">
        <p><strong>Code :</strong> @Model.Code</p>
    </div>
    <div class="mb-3">
        <p><strong>Nom :</strong> @Model.Libelle</p>
    </div>

    <!-- Tableau des livres associés -->
    <div class="mb-3">
        <h5>Livres associés à cette catégorie</h5>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Stock</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Livres != null && Model.Livres.Any())
                {
                    @foreach (var livre in Model.Livres)
                    {
                        <tr>
                            <td>@livre.Titre</td>
                            <td>@livre.Auteur</td>
                            <td>@livre.Stock</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">Aucun livre dans cette catégorie</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Categories")" class="btn btn-secondary">Retour à la liste</a>
        <a href="@Url.Action("Modifier", "Categories", new { id = Model.ID })" class="btn btn-primary">Modifier</a>
    </div>
</div>


