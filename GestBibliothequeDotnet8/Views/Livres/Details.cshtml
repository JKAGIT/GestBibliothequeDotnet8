@{
}
@model Livres

    
<h2>Détails du livre</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Informations de l'utilisateur</h5>
        <ul class="list-group">
            <li class="list-group-item">
                <strong>Titre:</strong> @Model.Titre
            </li>
            <li class="list-group-item">
                <strong>Auteur:</strong> @Model.Auteur
            </li>
            <li class="list-group-item">
                <strong>Nombre:</strong> @Model.Nombre
            </li>
            <li class="list-group-item">
                <strong>Stock:</strong> @Model.Stock
            </li>
            <li class="list-group-item">
                <strong>Catégorie:</strong> @Model.Categories?.Libelle
            </li>
        </ul>

        <div class="mt-3">
            <a href="@Url.Action("Index", "Livres")" class="btn btn-secondary">Retour à la liste</a>
            <a href="@Url.Action("Modifier", "Livres", new { id = Model.ID })" class="btn btn-primary">Modifier</a>
        </div>
    </div>
</div>