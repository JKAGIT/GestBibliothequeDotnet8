@{
}
@model Usagers

<div asp-validation-summary="All" class="text-danger"></div>

<div class="container mt-4">
    <h2>Supprimer un usager</h2>

    <div class="alert alert-warning" role="alert">
        <strong>Attention!</strong> Êtes-vous sûr de vouloir supprimer cet usager.
    </div>

    <div class="mb-3">
        <p><strong>Nom :</strong> @Model.Nom</p>
        <p><strong>Prénoms :</strong> @Model.Prenoms</p>
        <p><strong>Courriel :</strong> @Model.Courriel</p>
        <p><strong>Téléphone :</strong> @Model.Telephone</p>
    </div>


    <form asp-action="SupprimerConfirmation" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a href="@Url.Action("Index", "Usagers")" class="btn btn-secondary">Annuler</a>
    </form>

</div>

