
@{
    ViewData["Title"] = "Vérifier la Disponibilité";
}

<h1>Vérifier la Disponibilité du Livre</h1>

<form asp-action="VerifierDisponibilite" method="post">
    <div class="form-group">
        <label for="livreId">Sélectionnez un livre :</label>

        <input type="text" id="livreRechercher" class="form-control" placeholder="Rechercher un livre..." onkeyup="filtreLivres()">

        <select id="livreId" name="idLivre" class="form-control" required>
            <option value="">-- Sélectionner un livre --</option>
            @if (ViewData["Livres"] != null && ViewData["Livres"] is SelectList livres)
            {
                @foreach (var livre in livres)
                {
                    <option value="@livre.Value">@livre.Text</option>
                }
            }
            else
            {
                <option value="">Aucun livre disponible</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Vérifier</button>
</form>

@if (ViewData["MessageDisponibilite"] != null)
{
    <div class="mt-3 alert alert-info">
        @ViewData["MessageDisponibilite"]
    </div>
}