@{
}
@model Utilisateurs


<h2>Détails de l'utilisateur</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Informations de l'utilisateur</h5>
        <ul class="list-group">
            <li class="list-group-item">
                <strong>Matricule:</strong> @Model.Matricule
            </li>
            <li class="list-group-item">
                <strong>Nom:</strong> @Model.Nom
            </li>
            <li class="list-group-item">
                <strong>Prénoms:</strong> @Model.Prenoms
            </li>
            <li class="list-group-item">
                <strong>Courriel:</strong> @Model.Courriel
            </li>
            <li class="list-group-item">
                <strong>Téléphone:</strong> @Model.Telephone
            </li>
        </ul>

        <div class="mt-3">
            <a href="@Url.Action("Index", "Utilisateurs")" class="btn btn-secondary">Retour à la liste</a>
            <a href="@Url.Action("Modifier", "Utilisateurs", new { id = Model.ID })" class="btn btn-primary">Modifier</a>
        </div>
    </div>
</div>
