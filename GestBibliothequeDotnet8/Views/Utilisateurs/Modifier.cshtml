@model GestBibliothequeDotnet8.Models.Utilisateurs

@{
    ViewData["Title"] = "Modifier Utilisateur";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Matricule"></label>
        <input asp-for="Matricule" class="form-control" readonly />
        <span asp-validation-for="Matricule" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nom"></label>
        <input asp-for="Nom" class="form-control" />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prenoms"></label>
        <input asp-for="Prenoms" class="form-control" />
        <span asp-validation-for="Prenoms" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Courriel"></label>
        <input asp-for="Courriel" class="form-control" />
        <span asp-validation-for="Courriel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telephone"></label>
        <input asp-for="Telephone" class="form-control" placeholder="418 111 1234" maxlength="12" />
        <span asp-validation-for="Telephone" class="text-danger"></span>
    </div>
    <a href="@Url.Action("Index", "Utilisateurs")" class="btn btn-secondary">Annuler</a>
    <button type="submit" class="btn btn-primary">Modifier</button>
</form>
<a asp-action="Index">Retour à la liste</a>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.6/inputmask.min.js"></script>
}
